{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/api-docs", "dest": "/api/index.js" },
    { "src": "/", "dest": "/public/home.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}